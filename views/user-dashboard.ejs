<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard - Conference Registration</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-light bg-white shadow-sm">
      <div class="container d-flex justify-content-between">
        <span class="navbar-brand mb-0 h1">Conference Dashboard</span>
        <form action="/auth/logout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger btn-sm">Logout</button>
        </form>
      </div>
    </nav>

    <div class="container mt-5">
      <h3>Welcome, <%= user.name %></h3>

      <div class="card shadow-sm p-4 mt-4">
        <h4 class="mb-3">Your Registrations</h4>

        <% if (registrations.length === 0) { %>
        <p class="text-muted">
          No registrations found. Fill the form below to register for the
          conference.
        </p>
        <% } else { %>
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th>Author</th>
                <th>National/International</th>
                <th>Membership</th>
                <th>Registration Type</th>
                <th>Paper ID</th>
                <th>Date</th>
                <th>Receipt</th>
                <!-- âœ… new column -->
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% registrations.forEach(reg => { %>
              <tr>
                <td><%= reg.isAuthor ? "Yes" : "No" %></td>
                <td><%= reg.nationality %></td>
                <td><%= reg.category %></td>
                <td>
                  <% if (reg.conferenceType === "full") { %> Full Conference
                  including Tutorials/Workshops <% } else { %> Only
                  Tutorial/Workshop <% } %>
                </td>
                <td><%= reg.paperId %></td>
                <td><%= new Date(reg.createdAt).toLocaleString() %></td>
                <td>
                  <% if (reg.receiptPath) { %>
                  <a
                    href="<%= reg.receiptPath %>"
                    class="btn btn-sm btn-success"
                    target="_blank"
                    rel="noopener"
                  >
                    Download
                  </a>
                  <% } else { %>
                  <span class="text-muted">Not Available</span>
                  <% } %>
                </td>
                <!-- cancel -->
                <td>
                  <% if (reg.status === "cancelled") { %>
                  <span class="text-danger fw-bold">Cancelled</span>
                  <% } else { %>
                  <span class="text-success fw-bold">Active</span>
                  <% } %>
                </td>

                <td>
                  <% if (reg.status === "active") { %>
                  <button
                    class="btn btn-sm btn-warning cancel-btn"
                    data-id="<%= reg._id %>"
                  >
                    Cancel
                  </button>
                  <% } else { %>
                  <span class="text-muted">N/A</span>
                  <% } %>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% } %>

        <div class="mt-4">
          <% // Check if the user is a non-author with an existing registration
          const nonAuthorRegistered = registrations.some(r => !r.isAuthor); %>
          <% if (nonAuthorRegistered) { %>
          <p class="text-warning">
            Non-authors are allowed to fill the registration form only once.
          </p>
          <% } %>

          <a href="/register/form" class="btn btn-primary">
            Register for Conference
          </a>
        </div>
      </div>
    </div>
    <script src="/js/cancel.js"></script>
  </body>
</html>
